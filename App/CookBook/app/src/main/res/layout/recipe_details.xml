<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ececec"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/ingredientsCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingTop="4dp"
        card:card_layout_resourceID="@layout/ingredients_card" />

    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/tastesCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingTop="4dp"
        card:card_layout_resourceID="@layout/tastes_card" />

    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/detailsButtonCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingTop="4dp"
        card:card_layout_resourceID="@layout/recipe_details_buttons_card" />
</LinearLayout>